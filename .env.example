# Supabase Configuration
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_public_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Admin Configuration - SERVER-SIDE ONLY
# Comma-separated list of admin email addresses (NEVER use NEXT_PUBLIC_ for this)
ADMIN_EMAIL=ashton@example.com,cheyenne@example.com

# Security Configuration
# Generate a secure random string (32+ characters)
NEXTAUTH_SECRET=your_secure_random_string_here_32_chars_minimum
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data_here

# Email Configuration (Resend)
# Get API key from resend.com
RESEND_API_KEY=your_resend_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# RSVP Configuration
RSVP_DEADLINE=2026-07-01T23:59:59Z
