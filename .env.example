# Supabase Configuration (Modern @supabase/ssr pattern)
# Get these from your Supabase project settings > API
# REQUIRED: These must be set for the application to work
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=sb_publishable_your_publishable_key_here
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Admin Configuration - SERVER-SIDE ONLY
# Comma-separated list of admin email addresses (NEVER use NEXT_PUBLIC_ for this)
ADMIN_EMAIL=ashton@example.com,cheyenne@example.com

# Security Configuration
# Generate a secure random string (32+ characters) - CRITICAL for production
NEXTAUTH_SECRET=your_secure_random_string_here_32_chars_minimum
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data_here

# JWT Secret for additional token signing (optional but recommended)
JWT_SECRET=your_jwt_secret_for_additional_token_signing_here

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=3600

# Email Configuration (Resend)
# Get API key from resend.com
RESEND_API_KEY=your_resend_api_key_here

# Application Configuration
# REQUIRED: Set to your domain in production, localhost in development
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# RSVP Configuration
RSVP_DEADLINE=2026-07-01T23:59:59Z
